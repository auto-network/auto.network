{
  "page": "Auth.razor",
  "baseUrl": "/auth",
  "description": "Authentication page for Auto application",
  "screenshots": [
    {
      "name": "Auth.razor.Initial",
      "description": "Initial auth page state - empty email field",
      "actions": [],
      "validate": {
        "elements": {
          "visible": ["#email", "button[type='submit']", ".text-green-400"],
          "text": {
            ".text-green-400": "Auto",
            "label": "Email",
            "button[type='submit']": "Continue"
          }
        },
        "state": "email-entry"
      }
    },
    {
      "name": "Auth.razor.EmailEntered",
      "description": "Auth page with email address entered",
      "actions": [
        {
          "type": "fill",
          "selector": "input[type=\"email\"]",
          "value": "user@example.com"
        }
      ],
      "validate": {
        "elements": {
          "visible": ["#email", "button[type='submit']"],
          "values": {
            "#email": "user@example.com"
          }
        },
        "state": "email-filled"
      }
    },
    {
      "name": "Auth.razor.PasswordStep",
      "description": "Auth page showing password entry step",
      "actions": [
        {
          "type": "fill",
          "selector": "input[type=\"email\"]",
          "value": "user@example.com"
        },
        {
          "type": "click",
          "selector": "button[type=\"submit\"]"
        },
        {
          "type": "wait",
          "selector": "input[type=\"password\"]"
        },
        {
          "type": "wait",
          "ms": 600
        }
      ],
      "validate": {
        "elements": {
          "visible": ["input[type='password']", "button[type='submit']"],
          "hidden": ["input[type='email']"],
          "text": {
            "label": "Password",
            "button[type='submit']": "Login"
          }
        },
        "state": "password-entry"
      }
    },
    {
      "name": "Auth.razor.PasswordsFilled",
      "description": "Password fields filled with matching passwords",
      "actions": [
        {
          "type": "fill",
          "selector": "input[type=\"email\"]",
          "value": "user@example.com"
        },
        {
          "type": "click",
          "selector": "button[type=\"submit\"]"
        },
        {
          "type": "wait",
          "selector": "input[type=\"password\"]"
        },
        {
          "type": "wait",
          "ms": 600
        },
        {
          "type": "fill",
          "selector": "input[type=\"password\"]:nth-of-type(1)",
          "value": "TestPassword123!"
        },
        {
          "type": "fill",
          "selector": "input[type=\"password\"]:nth-of-type(2)",
          "value": "TestPassword123!"
        }
      ],
      "validate": {
        "elements": {
          "visible": ["button[type='submit']"],
          "text": {
            "button[type='submit']": "Create Account"
          }
        },
        "state": "passwords-filled"
      }
    },
    {
      "name": "Auth.razor.LoggedIn",
      "description": "After successful account creation",
      "actions": [
        {
          "type": "fill",
          "selector": "input[type=\"email\"]",
          "value": "user@example.com"
        },
        {
          "type": "click",
          "selector": "button[type=\"submit\"]"
        },
        {
          "type": "wait",
          "selector": "input[type=\"password\"]"
        },
        {
          "type": "wait",
          "ms": 600
        },
        {
          "type": "fill",
          "selector": "input[type=\"password\"]:nth-of-type(1)",
          "value": "TestPassword123!"
        },
        {
          "type": "fill",
          "selector": "input[type=\"password\"]:nth-of-type(2)",
          "value": "TestPassword123!"
        },
        {
          "type": "click",
          "selector": "button:has-text(\"Create Account\")"
        }
      ],
      "validate": {
        "elements": {
          "visible": ["textarea"],
          "text": {
            "h1": "Auto"
          }
        },
        "state": "logged-in"
      }
    },
